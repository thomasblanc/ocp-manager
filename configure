#!/bin/sh

VERSION=0.1.1

PREFIX=/usr/local

while [ "$#" -gt 0 ]; do
  case "$1" in
    --prefix|-prefix)
      PREFIX="$2"
      shift
      shift
      ;;
    *)
      echo "Unknown option: $1" >&2
      exit 2
  esac
done


echo "OBUILD=./_obuild" > Makefile.config
echo "BINDIR=$PREFIX/bin" >> Makefile.config
echo "MANDIR=$PREFIX/man" >> Makefile.config
echo "VERSION=$VERSION" >> Makefile.config

echo "version=\"$VERSION\"" > build.ocp
echo "command=\"ocp-manager\"" >> build.ocp
echo "release_date=\"2014-02-26\"" >> build.ocp
cat build.ocp.in >> build.ocp

ocp-build -init
